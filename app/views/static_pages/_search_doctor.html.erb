
<div class="doctor-search">
	<%= form_tag({controller: :hs_doctors, action: 'search', method: 'get'}, {class: "navbar-search"}) do %>
		  <div class="input-search">
		      <%= text_field_tag :search, params[:search], class: 'search-query span3', placeholder: 'buscar especialidad médica, nombre o apellido de doctor' %>
		     
	        <%=label :state, 'Región'%>
			<select name="state" id="state">
				<% @states.each do |state| %>
					<option value="<%=state.id%>"><%=state.name%></option>
				<% end %>
			</select>
			<input type="hidden" id="hidden_township" name="township" value="">
			<a href="#" id="add_township">agregar comuna?</a>
			<div class="township-div">
				<%= label :township, 'Comuna'%>
				<select name="township" id="township" disabled style="display:none">		
					<% @townships.each do |township| %>	
						<option value="<%=township.name%>" class="<%=township.hs_state_id%>"><%=township.name.downcase.camelize%></option>
					<% end %>		 
				</select>
			</div>
			 <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-large" %> 
	      </div>
  <% end %> 
</div>

<script type="text/javascript">
	$("#add_township").click(function(){
		dynamicSelect("state", "township");
		$("#hidden_township").attr("disabled", "disabled");
		$(".township-div").show();
		$("#township").removeAttr("disabled").show()
	});
</script>