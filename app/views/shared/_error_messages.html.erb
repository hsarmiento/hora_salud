<% if @hs_account.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      El formulario contiene <%= pluralize(@hs_account.errors.count, "error", "errores") %>.
    </div>
    <ul>
    <% @hs_account.errors.full_messages.each do |msg| %>      
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>