<% provide(:title, "Editar clinica") %>
<h1>Actualizar clinica</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@hs_clinic) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :address %>
			<%= f.text_field :address %>

			<%= f.label :country %>
			<%= f.text_field :country %>

			<label for="hs_clinic_hs_state_id">State</label>
			<select name="hs_clinic[hs_state_id]" id="hs_clinic_hs_state_id">
				<% @hs_states.each do |state| %>
					<% if state.id == @hs_clinic.hs_state_id %>
						<option value="<%=state.id%>" selected><%=state.name%></option>
					<% else %>
						<option value="<%=state.id%>"><%=state.name%></option>
					<% end %>					
				<% end %>
			</select>
			<label for="hs_clinic_township">Township</label>
			<select name="hs_clinic[township]" id="hs_clinic_township">		
				<% @hs_townships.each do |township| %>
					<% if township.name == @hs_clinic.township %>
						<option selected value="<%=township.name%>" class="<%=township.hs_state_id%>"><%=township.name.downcase.camelize%></option>
					<% else %>
						<option value="<%=township.name%>" class="<%=township.hs_state_id%>"><%=township.name.downcase.camelize%></option>
					<% end %>	
					
				<% end %>		 
			</select>

			<%= f.label :phone %>
			<%= f.text_field :phone %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :lat %>
			<%= f.text_field :lat%>

			<%= f.label :lng %>
			<%= f.text_field :lng %>

			<%= f.submit "Guardar cambios", class: "btn btn-large" %>
		<% end %>
	</div>
</div>

<script type="text/javascript">
		dynamicSelect("hs_clinic_hs_state_id", "hs_clinic_township");
</script>