<% provide(:title, "Identificarse") %>
<h1>Identificarse</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:hs_sessions, url: hs_sessions_path) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Entrar", class: "btn btn-large" %>
		<% end %>
	</div>
</div>
